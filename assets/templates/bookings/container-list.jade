p(ng-if="!containers.length") Please add those containers confirmed by the shipping line.
a(ng-click="loadDistributed()") Distribute!

container(model="container" ng-repeat="container in containers")

a(ng-if="!showContainer" ng-click="toggleAddContainer()") Add Container

form(ng-if="showContainer" class="container-form" name="addContainerForm" ng-submit="addContainer()")
  form-group(label="Number")
    input(ng-required="true" ng-model="container.number")
  form-group(label="Type")
    select(ng-required="true" ng-model="container.type" ng-options="type for type in containerTypes")
  form-group(label="")
    input(ng-model="container.temperature")

  .form-actions
    button.btn.btn-default(type="submit") Add
    button.btn.btn-link(ng-click="toggleAddContainer()") Cancel
